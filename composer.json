{
    "name": "tiagomichaelsousa/slack-laravel",
    "description": "A slack sdk for laravel",
    "keywords": ["php", "slack", "sdk", "php", "laravel", "package"],
    "license": "MIT",
    "authors": [
        {
            "name": "Tiago Sousa",
            "email": "tiagomichaelsousa@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1|^8.2",
        "guzzlehttp/guzzle": "^7",
        "laravel/framework": "^9|^10",
        "tiagomichaelsousa/slack-php": "^0"
    },
    "require-dev": {
        "laravel/pint": "^1.10.1",
        "pestphp/pest": "^2.6.3",
        "phpstan/phpstan": "^1.10.18",
        "rector/rector": "^0.17.2",
        "symfony/var-dumper": "^6.3.0"
    },
    "autoload": {
        "psr-4": {
            "Slack\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Slack\\Laravel\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "refacto": "rector",
        "lint": "pint",
        "test:refacto": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always",
        "test": [
            "@test:refacto",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
